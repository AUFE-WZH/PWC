            $("#star4").attr("src", "/Content/img/star.png");
            $("#star5").attr("src", "/Content/img/star.png");
            $("#message").html("");
        }
    }
    /*click()点击事件处理，记录打分*/
    function click(param) {
        check = param;//记录当前打分
        var Eva = document.getElementById("Eva");
        Eva.value = check;      
        out();//设置星星数
    }
</script>
}