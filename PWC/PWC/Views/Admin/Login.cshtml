@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AUFEOJ后台登陆页</title>

    <script src="~/Content/easyui/jquery.min.js"></script>
    <script src="~/Content/easyui/easyui-lang-zh_CN.js"></script>
    <script src="~/Content/easyui/jquery.easyui.min.js"></script>
    <link href="~/Content/easyui/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/easyui/themes/default/easyui.css" rel="stylesheet" />
</head>
<body style="background-color:gray">
    <div id="win" class="easyui-window" title="AUFEOJ-Admin" style="width:300px;height:180px;" iconCls="icon-save">
        <form style="padding:10px 20px 10px 40px;" action="/Admin/LoginCheck" method="post">
            <p><label> 用户名:</label> <input type="text" placeholder="请填写用户名" name="Username" /></p>
            <p><label> 密码:&nbsp;&nbsp;&nbsp;&nbsp;</label> <input type="password" placeholder="请填写密码" name="Password" /></p>
            <div style="padding:5px;text-align:center;">
                <button type="submit" class="easyui-linkbutton" icon="icon-ok">登录</button>
            </div>
        </form>
    </div>

</body>
</html>